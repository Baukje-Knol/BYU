<script type="text/javascript">

$(document).ready(() => {
           var debounce_timeout = null;
           var counter = 0;
           $("#citysearch").on("keyup", (event) => {
               var query = $('#citysearch').val().toLowerCase()

               clearTimeout(debounce_timeout);
               debounce_timeout = setTimeout(function () {
                   debounce_timeout = null;
                   counter++;
                   optimize(query);
                   console.log("0------------" +query)

                   console.log(counter)
               }, 300);
           });

           function optimize(query) {
               if (query.length != 0) {
                   $.post('/search', {
                       query: query
                   }, (response) => {
                       $('#citylist').empty();
                       for (const el in response) {
                           $('#citylist').append(
                               `<li class='suggestions' style="list-style-type:none">${response[el]}</li>`)
                       }
                   })
               } else {
                   $('#citylist').empty();
               }
           };


           $("#citylist").on("click", "li", (event) => {
               var target = event.target
               console.log("0------------" + target)

               $("#citysearch").val(target.textContent);
                $('#citylist').empty();
           });
});
